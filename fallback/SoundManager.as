package  {	import flash.media.Sound	import flash.net.URLRequest;	import flash.media.SoundChannel	import flash.media.SoundTransform;	import flash.events.Event;	// Sound Manager 	public class SoundManager {	static var sound:Sound;		static var memorySoundPath=""		static var sc:SoundChannel;		public static var vol:Number;		public function SoundManager() {			// constructor code		}		//play music (music path)		public static function playMusic(snd:String=""):void{						try{			if(snd==""){				sound&&[sc=sound.play()];				var soundTF:SoundTransform=new SoundTransform();					soundTF.volume=vol;					sc.soundTransform=soundTF			}						else{				if(memorySoundPath!=snd){					memorySoundPath=snd					sound=new Sound();									sound.load(new URLRequest(snd))					sc=sound.play();					 soundTF =new SoundTransform();					soundTF.volume=vol;					sc.soundTransform=soundTF					sc.addEventListener(Event.SOUND_COMPLETE,loop)					 				}				else{					sound&&[sc=sound.play()];					soundTF =new SoundTransform();					soundTF.volume=vol;					sc.soundTransform=soundTF				}			}			}catch(e:Error){							}		}		public static function stopMusic(snd:String=""):void{			 sc&&sc.stop();		}		//loop music		static function loop(e){			sc=sound.play();			var soundTF:SoundTransform=new SoundTransform();					soundTF.volume=vol;					sc.soundTransform=soundTF			sc.addEventListener(Event.SOUND_COMPLETE,loop)		}			}	}