package  {	import flash.display.MovieClip	import flash.display.Loader;	import flash.events.Event;	import flash.display.BitmapData;	import flash.display.Bitmap;	import flash.net.URLRequest;	import flash.events.MouseEvent;	import caurina.transitions.*	/*//Fun Tumb(Thumb)*/	public class FunTumb extends MovieClip {		public var selected:Boolean		public var id:uint;		public var src;		public function FunTumb() {					}		//load thumb 		public function load(_str:String,_src=null):void{			rollMC.width=bg.width=Parameters.cataThumbWidth			rollMC.height=bg.height=Parameters.cataThumbHeight												var loader:Loader=new Loader();						loader.contentLoaderInfo.addEventListener(Event.COMPLETE,imgLoaded)						loader.contentLoaderInfo.addEventListener(Event.COMPLETE,imgError)						loader.load(new URLRequest(_str))									rollMC.buttonMode=true;			rollMC.addEventListener(MouseEvent.ROLL_OVER,mouseHandler)			rollMC.addEventListener(MouseEvent.ROLL_OUT,mouseHandler)			rollMC.addEventListener(MouseEvent.MOUSE_DOWN,mouseHandler)						src=_src		}		/*//mouse event handler*/		private function mouseHandler(e:MouseEvent):void{						if(!selected){								if(e.type==MouseEvent.ROLL_OVER){					//w_rim.alpha=0;					Tweener.addTween(w_rim, {						delay:0,						time:.3,						alpha:1,						 						 						transition:"linear" 					});				}								else if(e.type==MouseEvent.ROLL_OUT){					Tweener.addTween(w_rim, {						delay:0,						time:.3,						alpha:0,						 						 						transition:"linear" 					});				}								else if(e.type==MouseEvent.MOUSE_DOWN){					dispatchEvent(new Event("onRollDown"))				}								}								}		//selecte , show out-frame		public function selecte():void{			rollMC.buttonMode=false;			selected=true;			w_rim.alpha=1;			w_rim.visible=true;		}		//unselecte , hide out-frame		public function unSelecte():void{			rollMC.buttonMode=true;			selected=false;			w_rim.alpha=0;			w_rim.visible=false;		}		var bm		/*//thumb iamge loaded*/		private function imgLoaded(e:Event):void{			var bmd:BitmapData=Bitmap(e.target.loader.content).bitmapData			var bm=new Bitmap(bmd);									bm.width=Parameters.cataThumbWidth;			bm.height=Parameters.cataThumbHeight;						cmc.addChild(bm);									var w=w_rim.w;			var rim=w_rim.rim;			rim.width=Parameters.cataThumbWidth;			rim.height=Parameters.cataThumbHeight;						w.bg.width=Parameters.cataThumbWidth;			b.bg.width=Parameters.cataThumbWidth;									 		}				/*//error handler*/				private function imgError(e:Event):void{					}				/*//set title text*/		public function set title(_title){			w_rim.w._txt.text=_title;			b._txt.text=_title;		}	}	}