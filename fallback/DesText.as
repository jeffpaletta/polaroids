package  {		/*describe text class*/	import flash.display.MovieClip;	import caurina.transitions.*	public class DesText extends MovieClip {		public static var rimY=6		public static var rimX=8		public static var tw=800;		public static var desSpaceY=8;		public function DesText() {			 			this.blendMode="layer"			bgMC.graphics.beginFill(0x000000)			bgMC.graphics.drawRect(0,0,10,10);			bgMC.graphics.endFill();			_txt.autoSize="left";						_txt.width=tw;					}		// set width 		public function setWidth(_tw):void{			_txt.width=_tw;		}		//set html text		public function set htmlText(_str:String):void{			_txt.htmlText=_str;			bgMC.width=_txt.textWidth+rimX*2;			bgMC.height=_txt.textHeight+rimY*3;						_txt.x=rimX;			_txt.y=rimY+1;						y=stage.stageHeight-desSpaceY-bgMC.height;			x=-bgMC.width;					}				/*public function get text(){			return _txt.text;		}*/						// show this describe		public function show():void{			 			alpha=0			var targetX:Number=(stage.stageWidth-bgMC.width)*.5;			x=targetX-100;			Tweener.addTween(this, {				delay:0,				time:.8,				x:targetX,				alpha:1,								transition:"easeInOutQuart"			});		}		//hide this describe		public function hide():void{			var targetX:Number=(stage.stageWidth-bgMC.width)*.5;			Tweener.addTween(this, {				delay:0,				time:.4,				x:targetX-100,				alpha:0,								transition:"easeInOutQuart"			});		}	}	}